<% /* eslint-disable */ %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details | Sanskrit Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@500;600;700&display=swap" rel="stylesheet">
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/sidebar.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #2D3250;
            --secondary: #424769;
            --accent: #676F9D;
            --light: #F9F9F9;
            --dark: #1A1B26;
            --success: #4CAF50;
            --error: #F44336;
            --warning: #FF9800;
            --info: #2196F3;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
        body {
            font-family: 'Inter', sans-serif;
            background: var(--light);
            min-height: 100vh;
        }
        .main-content {
            margin-left: 280px;
            padding: 2rem;
        }
        .topbar {
            background: white;
            padding: 1rem 2rem;
            border-radius: 16px;
            box-shadow: var(--shadow);
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .page-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: var(--dark);
            margin: 0;
        }
        .back-btn {
            background: var(--primary);
            color: #fff;
            border: none;
            border-radius: 16px;
            padding: 0.75rem 2rem;
            font-weight: 600;
            font-size: 1rem;
            box-shadow: none;
            transition: background 0.2s, color 0.2s;
            text-decoration: none;
        }
        .back-btn:hover {
            background: var(--accent);
            color: #fff;
            text-decoration: none;
        }
        .order-card {
            background: white;
            border-radius: 24px;
            box-shadow: var(--shadow-lg);
            margin-bottom: 2rem;
            overflow: hidden;
        }
        .order-card-header {
            background: var(--primary);
            color: #fff;
            padding: 1.5rem 2rem 1rem 2rem;
            border-top-left-radius: 24px;
            border-top-right-radius: 24px;
            font-family: 'Playfair Display', serif;
            font-size: 1.6rem;
            font-weight: 600;
            letter-spacing: 0.5px;
        }
        .order-card-content {
            padding: 2rem;
        }
        .status-badge {
            border-radius: 12px;
            padding: 0.3rem 1rem;
            font-size: 0.85rem;
            font-weight: 600;
        }
        .action-card {
            background: white;
            border-radius: 24px;
            box-shadow: var(--shadow-lg);
            margin-bottom: 2rem;
            overflow: hidden;
        }
        .action-card-header {
            background: var(--secondary);
            color: #fff;
            padding: 1.5rem 2rem 1rem 2rem;
            border-top-left-radius: 24px;
            border-top-right-radius: 24px;
            font-family: 'Playfair Display', serif;
            font-size: 1.3rem;
            font-weight: 600;
        }
        .action-card-content {
            padding: 2rem;
        }
        .quick-action-btn {
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <%- include('../partials/sidebar', { 
            activePage: 'order',
            activeCategory: null,
            koshCategories: koshCategories || [],
            koshSubCategoriesMap: koshSubCategoriesMap || {}
        }) %>
    </nav>
    <!-- Main Content -->
    <main class="main-content">
        <!-- Topbar -->
        <div class="topbar">
            <h1 class="page-title">Order Details</h1>
            <div>
                <a href="/order" class="back-btn">
                    <i class="fas fa-arrow-left" style="margin-right:0.5rem;"></i>
                    Back to Orders
                </a>
            </div>
        </div>
              <!-- Flash Messages -->
        <% if (success && success.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (error && error.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <div class="row">
            <!-- Order Information -->
            <div class="col-lg-8">
                <div class="order-card">
                    <div class="order-card-header">
                        Order Information
                    </div>
                    <div class="order-card-content">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Order ID:</strong> <%= order._id %></p>
                                <p><strong>Order Date:</strong> <%= new Date(order.orderDate).toLocaleString() %></p>
                                <p><strong>Product:</strong> <%= order.productName %></p>
                                <p><strong>Category:</strong> 
                                    <span class="status-badge <%= order.category === 'astroshop' ? 'bg-primary' : 'bg-success' %>">
                                        <%= order.category.charAt(0).toUpperCase() + order.category.slice(1) %>
                                    </span>
                                </p>
                                <p><strong>Total Amount:</strong> <span class="h5 text-success">â‚¹<%= order.totalAmount.toLocaleString() %></span></p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Status:</strong> 
                                    <span class="status-badge bg-<%= getStatusColor(order.status) %> fs-6">
                                        <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
                                    </span>
                                </p>
                                <p><strong>Payment Status:</strong> 
                                    <span class="status-badge bg-<%= getPaymentStatusColor(order.paymentStatus) %> fs-6">
                                        <%= order.paymentStatus.charAt(0).toUpperCase() + order.paymentStatus.slice(1) %>
                                    </span>
                                </p>
                                <p><strong>Created:</strong> <%= new Date(order.createdAt).toLocaleString() %></p>
                                <p><strong>Last Updated:</strong> <%= new Date(order.updatedAt).toLocaleString() %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Customer Information -->
                <div class="order-card">
                    <div class="order-card-header">
                        Customer Information
                    </div>
                    <div class="order-card-content">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Name:</strong> <%= order.customerName %></p>
                                <p><strong>Email:</strong> <a href="mailto:<%= order.email %>"><%= order.email %></a></p>
                                <p><strong>Phone:</strong> <a href="tel:<%= order.phoneNumber %>"><%= order.phoneNumber %></a></p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Address:</strong> <%= order.address %></p>
                                <p><strong>City:</strong> <%= order.city %></p>
                                <p><strong>State:</strong> <%= order.state %></p>
                                <p><strong>Pincode:</strong> <%= order.pincode %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Shipping Address -->
                <% if (order.shippingAddress && (order.shippingAddress.address || order.shippingAddress.city)) { %>
                    <div class="order-card">
                        <div class="order-card-header">
                            Shipping Address
                        </div>
                        <div class="order-card-content">
                            <p><%= order.shippingAddress.address %></p>
                            <p><%= order.shippingAddress.city %>, <%= order.shippingAddress.state %> <%= order.shippingAddress.pincode %></p>
                            <p><%= order.shippingAddress.country %></p>
                        </div>
                    </div>
                <% } %>

                <!-- Notes -->
                <% if (order.notes) { %>
                    <div class="order-card">
                        <div class="order-card-header">
                            Notes
                        </div>
                        <div class="order-card-content">
                            <p><%= order.notes %></p>
                        </div>
                    </div>
                <% } %>
        </div>

            </div>
        </div>

        <!-- Status Updates -->
        <div class="col-lg-4">
            <!-- Update Order Status -->
            <div class="action-card">
                <div class="action-card-header">
                    Update Order Status
                </div>
                <div class="action-card-content">
                    <form method="POST" action="/order/<%= order._id %>/status">
                        <div class="mb-3">
                            <label for="status" class="form-label fw-bold">Order Status</label>
                            <select class="form-select" id="status" name="status" required>
                                <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                <option value="confirmed" <%= order.status === 'confirmed' ? 'selected' : '' %>>Confirmed</option>
                                <option value="processing" <%= order.status === 'processing' ? 'selected' : '' %>>Processing</option>
                                <option value="shipped" <%= order.status === 'shipped' ? 'selected' : '' %>>Shipped</option>
                                <option value="delivered" <%= order.status === 'delivered' ? 'selected' : '' %>>Delivered</option>
                                <option value="cancelled" <%= order.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Update Status</button>
                    </form>
                </div>
            </div>

            <!-- Update Payment Status -->
            <div class="action-card">
                <div class="action-card-header">
                    Update Payment Status
                </div>
                <div class="action-card-content">
                    <form method="POST" action="/order/<%= order._id %>/payment">
                        <div class="mb-3">
                            <label for="paymentStatus" class="form-label fw-bold">Payment Status</label>
                            <select class="form-select" id="paymentStatus" name="paymentStatus" required>
                                <option value="pending" <%= order.paymentStatus === 'pending' ? 'selected' : '' %>>Pending</option>
                                <option value="paid" <%= order.paymentStatus === 'paid' ? 'selected' : '' %>>Paid</option>
                                <option value="failed" <%= order.paymentStatus === 'failed' ? 'selected' : '' %>>Failed</option>
                                <option value="refunded" <%= order.paymentStatus === 'refunded' ? 'selected' : '' %>>Refunded</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Update Payment</button>
                    </form>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="action-card">
                <div class="action-card-header">
                    Quick Actions
                </div>
                <div class="action-card-content">
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-outline-info quick-action-btn" onclick="sendEmail()">
                            <i class="fas fa-envelope"></i> Send Email
                        </button>
                        <button type="button" class="btn btn-outline-warning quick-action-btn" onclick="printOrder()">
                            <i class="fas fa-print"></i> Print Order
                        </button>
                        <button type="button" class="btn btn-outline-danger quick-action-btn" onclick="deleteOrder()">
                            <i class="fas fa-trash"></i> Delete Order
                        </button>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </main>
</body>
</html>

<script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
<script>
function getStatusColor(status) {
    const colors = {
        'pending': 'warning',
        'confirmed': 'info',
        'processing': 'primary',
        'shipped': 'info',
        'delivered': 'success',
        'cancelled': 'danger'
    };
    return colors[status] || 'secondary';
}

function getPaymentStatusColor(paymentStatus) {
    const colors = {
        'pending': 'warning',
        'paid': 'success',
        'failed': 'danger',
        'refunded': 'info'
    };
    return colors[paymentStatus] || 'secondary';
}

function sendEmail() {
    const email = '<%= order.email %>';
    const subject = 'Order Update - <%= order._id %>';
    const body = `Dear <%= order.customerName %>,\n\nYour order (ID: <%= order._id %>) status has been updated.\n\nCurrent Status: <%= order.status %>\nPayment Status: <%= order.paymentStatus %>\n\nThank you for your business!\n\nBest regards,\nJyotish Admin Team`;
    
    window.open(`mailto:${email}?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`);
}

function printOrder() {
    window.print();
}

function deleteOrder() {
    if (confirm('Are you sure you want to delete this order? This action cannot be undone.')) {
        fetch('/order/<%= order._id %>', {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json'
            }
        }).then(response => {
            if (response.ok) {
                window.location.href = '/order';
            } else {
                alert('Error deleting order');
            }
        }).catch(error => {
            console.error('Error:', error);
            alert('Error deleting order');
        });
    }
}
</script> 