<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Festivals | Sanskrit Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@500;600;700&display=swap" rel="stylesheet">
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/sidebar.css" rel="stylesheet">
    <style>
        :root {
            --primary: #2D3250;
            --secondary: #424769;
            --accent: #676F9D;
            --light: #F9F9F9;
            --dark: #1A1B26;
            --success: #4CAF50;
            --error: #F44336;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        }
        body {
            font-family: 'Inter', sans-serif;
            background: var(--light);
            min-height: 100vh;
        }
        .main-content {
            margin-left: 280px;
            padding: 2rem;
        }
        .topbar {
            background: white;
            padding: 1rem 2rem;
            border-radius: 16px;
            box-shadow: var(--shadow);
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .page-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: var(--dark);
            margin: 0;
        }
        .btn-add {
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 0.6rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .btn-add:hover {
            background: var(--secondary);
            color: white;
        }
        .content-card {
            background: white;
            border-radius: 16px;
            box-shadow: var(--shadow);
            padding: 1.5rem;
        }
        .table {
            margin-bottom: 0;
            background: white;
        }
        thead th {
            background: #f4f4f8;
            color: var(--dark);
            font-weight: 600;
            border: none;
        }
        tbody td {
            vertical-align: middle;
            border-top: 1px solid #f0f0f0;
        }
        .action-btn {
            border: none;
            background: none;
            padding: 0.3rem 0.5rem;
            border-radius: 8px;
            transition: background 0.2s;
        }
        .action-btn.edit {
            color: var(--primary);
        }
        .action-btn.delete {
            color: var(--error);
        }
        .action-btn:hover {
            background: #f4f4f8;
        }
        .alert {
            border-radius: 12px;
            padding: 1rem 1.5rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        .alert-danger {
            background: rgba(244, 67, 54, 0.1);
            color: var(--error);
        }
        .alert-success {
            background: rgba(76, 175, 80, 0.1);
            color: var(--success);
        }
        .bulk-actions {
            display: flex;
            gap: 0.75rem;
            align-items: center;
            margin-bottom: 1rem;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 12px;
        }
        .btn-danger-bulk {
            background: var(--error);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 0.5rem 1rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        .btn-danger-bulk:hover {
            background: #d32f2f;
            transform: translateY(-1px);
        }
        .btn-danger-bulk:disabled {
            background: #ccc;
            cursor: not-allowed;
            transform: none;
        }
        .checkbox-cell {
            width: 50px;
            text-align: center;
        }
    </style>
</head>
<body>
    <nav class="sidebar">
        <%- include('partials/sidebar', { activePage: 'festivals' }) %>
    </nav>
    <main class="main-content">
        <div class="topbar">
            <h1 class="page-title">Festivals</h1>
            <div class="d-flex gap-2">
                <a href="/festivals/add" class="btn btn-add">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="22" height="22">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Add Festival
                </a>
                <button type="button" class="btn btn-add" data-bs-toggle="modal" data-bs-target="#uploadExcelModal">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="22" height="22">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                    </svg>
                    Upload Excel
                </button>
                <a href="/festivals/export-excel" class="btn btn-add" style="background:#16a34a;">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="22" height="22">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    Export Excel
                </a>
            </div>
        </div>
        <% if (error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <% if (success) { %>
            <div class="alert alert-success"><%= success %></div>
        <% } %>
        <div class="content-card">
            <% if (festivals.length > 0) { %>
            <div class="bulk-actions">
                <form id="bulkDeleteForm" method="POST" action="/festivals/bulk-delete" style="display: inline;">
                    <button type="submit" id="deleteSelectedBtn" class="btn btn-danger-bulk" disabled>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="18" height="18" style="vertical-align: middle; margin-right: 0.5rem;">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                        Delete Selected (<span id="selectedCount">0</span>)
                    </button>
                </form>
                <form method="POST" action="/festivals/delete-all" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete ALL festivals? This action cannot be undone!');">
                    <button type="submit" class="btn btn-danger-bulk">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="18" height="18" style="vertical-align: middle; margin-right: 0.5rem;">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                        Delete All
                    </button>
                </form>
            </div>
            <% } %>
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th class="checkbox-cell">
                            <% if (festivals.length > 0) { %>
                            <input type="checkbox" id="selectAll" title="Select All">
                            <% } %>
                        </th>
                        <th>#</th>
                        <th>Date</th>
                        <th>Vrat</th>
                        <th>Festival Name</th>
                        <th>Jyanti</th>
                        <th>Vishesh</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (festivals.length === 0) { %>
                        <tr><td colspan="8" class="text-center">No festivals added yet.</td></tr>
                    <% } %>
                    <% festivals.forEach(function(festival, idx) { %>
                        <tr>
                            <td class="checkbox-cell">
                                <input type="checkbox" class="festival-checkbox" name="festivalIds" value="<%= festival._id %>">
                            </td>
                            <td><%= idx + 1 %></td>
                            <td><%= festival.date ? festival.date.toISOString().slice(0,10) : '' %></td>
                            <td><%= festival.vrat %></td>
                            <td><%= festival.festival_name %></td>
                            <td><%= festival.jyanti %></td>
                            <td><%= festival.vishesh %></td>
                            <td>
                                <a href="/festivals/<%= festival._id %>/edit" class="btn btn-sm btn-outline-primary" title="Edit">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="18" height="18">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536M9 13h3l8-8a2.828 2.828 0 10-4-4l-8 8v3z" />
                                    </svg>
                                    Edit
                                </a>
                                <form action="/festivals/<%= festival._id %>/delete" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this festival?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" width="18" height="18">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                        </svg>
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </main>

    <!-- Upload Excel Modal -->
    <div class="modal fade" id="uploadExcelModal" tabindex="-1" aria-labelledby="uploadExcelModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="uploadExcelModalLabel">Upload Festivals Excel</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form action="/festivals/upload-excel" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="excelFile" class="form-label">Select Excel File</label>
                            <input type="file" class="form-control" id="excelFile" name="excelFile" accept=".xlsx,.xls" required>
                        </div>
                        <div class="alert alert-info">
                            <small>
                                <strong>Note:</strong> The Excel file should have the following columns (all optional):
                                <ul class="mb-0 mt-2">
                                    <li>Date (dd-mm-yyyy or YYYY-MM-DD format)</li>
                                    <li>Vrat (optional)</li>
                                    <li>Festival Name (optional)</li>
                                    <li>Jyanti (optional)</li>
                                    <li>Vishesh (optional)</li>
                                </ul>
                            </small>
                        </div>
                        <div class="text-end">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Upload</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script>
        // Select All functionality
        const selectAllCheckbox = document.getElementById('selectAll');
        const festivalCheckboxes = document.querySelectorAll('.festival-checkbox');
        const deleteSelectedBtn = document.getElementById('deleteSelectedBtn');
        const selectedCountSpan = document.getElementById('selectedCount');
        const bulkDeleteForm = document.getElementById('bulkDeleteForm');

        if (selectAllCheckbox) {
            selectAllCheckbox.addEventListener('change', function() {
                festivalCheckboxes.forEach(checkbox => {
                    checkbox.checked = this.checked;
                });
                updateDeleteButton();
            });
        }

        // Update delete button state when individual checkboxes change
        festivalCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                if (selectAllCheckbox) {
                    selectAllCheckbox.checked = Array.from(festivalCheckboxes).every(cb => cb.checked);
                }
                updateDeleteButton();
            });
        });

        function updateDeleteButton() {
            const selected = Array.from(festivalCheckboxes).filter(cb => cb.checked);
            const count = selected.length;
            
            if (selectedCountSpan) {
                selectedCountSpan.textContent = count;
            }
            
            if (deleteSelectedBtn) {
                deleteSelectedBtn.disabled = count === 0;
            }
        }

        // Handle bulk delete form submission
        if (bulkDeleteForm) {
            bulkDeleteForm.addEventListener('submit', function(e) {
                const selected = Array.from(festivalCheckboxes).filter(cb => cb.checked);
                if (selected.length === 0) {
                    e.preventDefault();
                    return false;
                }
                
                if (!confirm(`Are you sure you want to delete ${selected.length} selected festival(s)?`)) {
                    e.preventDefault();
                    return false;
                }
                
                // Add hidden inputs for selected IDs
                selected.forEach(checkbox => {
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'festivalIds';
                    input.value = checkbox.value;
                    bulkDeleteForm.appendChild(input);
                });
            });
        }

        // Initialize button state
        updateDeleteButton();
    </script>
</body>
</html> 