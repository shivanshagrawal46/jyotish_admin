<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hanumat Jyotish Responses | Sanskrit Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@500;600;700&display=swap" rel="stylesheet">
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/sidebar.css" rel="stylesheet">
    <style>
        :root {
            --primary: #2D3250;
            --secondary: #424769;
            --accent: #676F9D;
            --light: #F9F9F9;
            --dark: #1A1B26;
        }
        body {
            font-family: 'Inter', sans-serif;
            background: var(--light);
            min-height: 100vh;
        }
        .main-content {
            margin-left: 280px;
            padding: 2rem;
        }
        .topbar {
            background: white;
            padding: 1rem 2rem;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            margin-bottom: 2rem;
        }
        .page-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: var(--dark);
            margin: 0;
        }
        .response-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            padding: 2rem;
        }
        .form-label {
            font-weight: 500;
            color: var(--dark);
            margin-bottom: 0.5rem;
        }
        .form-control {
            border-radius: 8px;
            border: 1px solid #e2e8f0;
            padding: 0.75rem 1rem;
        }
        .form-control:focus {
            border-color: var(--accent);
            box-shadow: 0 0 0 0.2rem rgba(103, 111, 157, 0.25);
        }
        .btn {
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            font-weight: 500;
        }
        .btn-primary {
            background: var(--primary);
            border-color: var(--primary);
        }
        .btn-primary:hover {
            background: var(--accent);
            border-color: var(--accent);
        }
        .btn-outline-secondary {
            color: var(--dark);
            border-color: #e2e8f0;
        }
        .btn-outline-secondary:hover {
            background: #f8f9fa;
            color: var(--dark);
            border-color: #e2e8f0;
        }
        .nav-tabs {
            border-bottom: none;
            margin-bottom: 2rem;
        }
        .nav-tabs .nav-link {
            border: none;
            color: var(--dark);
            font-weight: 500;
            padding: 0.75rem 1.5rem;
            border-radius: 12px;
            margin-right: 1rem;
        }
        .nav-tabs .nav-link.active {
            background: var(--primary);
            color: white;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <%- include('../../partials/sidebar', { 
            activePage: activePage,
            activeCategory: activeCategory,
            koshCategories: [],
            mcqCategories: []
        }) %>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Topbar -->
        <div class="topbar">
            <h1 class="page-title">Hanumat Jyotish Responses</h1>
        </div>

        <!-- Navigation Tabs -->
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link" href="/hanumat-jyotish/questions">Question List</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/hanumat-jyotish/responses">Response List</a>
            </li>
        </ul>

        <!-- Response Form -->
        <div class="response-card">
            <h2 class="h4 mb-4"><%= question.question %></h2>
            <form action="/hanumat-jyotish/responses/<%= question._id %>" method="POST">
                <% for(let i = 1; i <= 10; i++) { %>
                    <div class="mb-3">
                        <label for="response_<%= i %>" class="form-label">Response <%= i %></label>
                        <textarea 
                            class="form-control" 
                            id="response_<%= i %>" 
                            name="response_<%= i %>" 
                            rows="3"
                        ><%= response && response.responses.find(r => r.field_number === i) ? response.responses.find(r => r.field_number === i).content : '' %></textarea>
                    </div>
                <% } %>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a href="/hanumat-jyotish/questions" class="btn btn-outline-secondary me-md-2">Back to Questions</a>
                    <button type="submit" class="btn btn-primary">Save Responses</button>
                </div>
            </form>
        </div>
    </main>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html> 