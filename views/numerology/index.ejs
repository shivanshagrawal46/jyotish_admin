    <div id="numerology-months-data" data-months='<%- JSON.stringify(months) %>' style="display:none;"></div>
    <script>
    const monthsDataDiv = document.getElementById('numerology-months-data');
    window.numerologyMonths = JSON.parse(monthsDataDiv.getAttribute('data-months'));
    
    // Daily Numerology Date Management
    let currentViewingDateId = null;
    
    // Load dates on page load
    window.addEventListener('DOMContentLoaded', function() {
        loadDailyDates();
    });
    
    async function loadDailyDates() {
        try {
            const res = await fetch('/api/numerology/daily');
            const data = await res.json();
            if (data.success) {
                renderDailyDatesTable(data.data);
            } else {
                document.getElementById('dailyDatesTable').innerHTML = '<tr><td colspan="6" class="text-center">Error loading dates</td></tr>';
            }
        } catch (error) {
            console.error(error);
            document.getElementById('dailyDatesTable').innerHTML = '<tr><td colspan="6" class="text-center">Error loading dates</td></tr>';
        }
    }
    
    function renderDailyDatesTable(dates) {
        const tbody = document.getElementById('dailyDatesTable');
        if (!dates || dates.length === 0) {
            tbody.innerHTML = '<tr><td colspan="7" class="text-center">No dates created yet</td></tr>';
            return;
        }
        tbody.innerHTML = dates.map((date) => `
            <tr>
                <td>
                    <input type="checkbox" class="date-checkbox" value="${date._id}" onchange="updateSelectedCount()">
                </td>
                <td>${date.id}</td>
                <td>${date.dateLabel || '-'}</td>
                <td>${date.dateISO ? new Date(date.dateISO).toLocaleDateString() : '-'}</td>
                <td>${date.notes || '-'}</td>
                <td>${new Date(date.createdAt).toLocaleDateString()}</td>
                <td>
                    <button class="btn btn-sm btn-primary me-2" onclick="viewDateContent('${date._id}', '${date.dateLabel}')">View Contents</button>
                    <button class="btn btn-sm btn-warning me-2" onclick="editDate('${date._id}', '${date.dateLabel}', ${date.dateISO ? `'${date.dateISO}'` : 'null'}, ${date.notes ? `'${date.notes}'` : 'null'})">Edit</button>
                    <button class="btn btn-sm btn-danger" onclick="deleteDate('${date._id}', '${date.dateLabel}')">Delete</button>
                </td>
            </tr>
        `).join('');
        updateSelectedCount();
    }

    function toggleSelectAllDates() {
        const selectAll = document.getElementById('selectAllDates');
        const checkboxes = document.querySelectorAll('.date-checkbox');
        checkboxes.forEach(cb => cb.checked = selectAll.checked);
        updateSelectedCount();
    }

    function updateSelectedCount() {
        const checkboxes = document.querySelectorAll('.date-checkbox:checked');
        const count = checkboxes.length;
        document.getElementById('selectedCount').textContent = count;
        document.getElementById('bulkDeleteBtn').style.display = count > 0 ? 'inline-block' : 'none';
        
        // Update select all checkbox state
        const allCheckboxes = document.querySelectorAll('.date-checkbox');
        const selectAll = document.getElementById('selectAllDates');
        if (allCheckboxes.length > 0) {
            selectAll.checked = checkboxes.length === allCheckboxes.length;
        }
    }

    async function bulkDeleteDates() {
        const checkboxes = document.querySelectorAll('.date-checkbox:checked');
        if (checkboxes.length === 0) {
            alert('Please select at least one date to delete');
            return;
        }

        const dateIds = Array.from(checkboxes).map(cb => cb.value);
        if (!confirm(`Delete ${dateIds.length} selected date(s)? This will also delete all their contents.`)) {
            return;
        }

        try {
            const res = await fetch('/api/numerology/daily', {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ dateIds })
            });
            const data = await res.json();
            if (data.success) {
                alert(data.message);
                loadDailyDates();
            } else {
                alert('Error: ' + data.error);
            }
        } catch (error) {
            alert('Error deleting dates');
        }
    }
    
    function showAddDateModal() {
        document.getElementById('addDateForm').reset();
        const modal = new bootstrap.Modal(document.getElementById('addDateModal'));
        modal.show();
    }
    
    async function submitAddDate() {
        const form = document.getElementById('addDateForm');
        const formData = new FormData(form);
        const payload = {
            dateLabel: formData.get('dateLabel')
        };
        try {
            const res = await fetch('/api/numerology/daily', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });
            const data = await res.json();
            if (data.success) {
                alert('Date created successfully!');
                const modal = bootstrap.Modal.getInstance(document.getElementById('addDateModal'));
                modal.hide();
                loadDailyDates();
            } else {
                alert('Error: ' + data.error);
            }
        } catch (error) {
            alert('Error creating date');
        }
    }
    
    async function uploadDailyDatesExcel(input) {
        if (!input.files.length) return;
        
        const formData = new FormData();
        formData.append('excelFile', input.files[0]);
        
        try {
            const res = await fetch('/numerology/upload-daily-dates', {
                method: 'POST',
                body: formData
            });
            const data = await res.json();
            if (data.success) {
                alert(`Successfully created ${data.count} date(s)!`);
                loadDailyDates();
            } else {
                alert('Error: ' + data.error);
            }
        } catch (error) {
            alert('Error uploading Excel file');
        }
        
        // Clear file input
        input.value = '';
    }
    
    function editDate(id, dateLabel, dateISO, notes) {
        const form = document.getElementById('editDateForm');
        form.querySelector('[name="dateId"]').value = id;
        form.querySelector('[name="dateLabel"]').value = dateLabel;
        const modal = new bootstrap.Modal(document.getElementById('editDateModal'));
        modal.show();
    }
    
    async function submitEditDate() {
        const form = document.getElementById('editDateForm');
        const dateId = form.querySelector('[name="dateId"]').value;
        const payload = {
            dateLabel: form.querySelector('[name="dateLabel"]').value
        };
        try {
            const res = await fetch(`/api/numerology/daily/${dateId}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });
            const data = await res.json();
            if (data.success) {
                alert('Date updated successfully!');
                const modal = bootstrap.Modal.getInstance(document.getElementById('editDateModal'));
                modal.hide();
                loadDailyDates();
            } else {
                alert('Error: ' + data.error);
            }
        } catch (error) {
            alert('Error updating date');
        }
    }
    
    async function deleteDate(id, dateLabel) {
        if (!confirm(`Delete date "${dateLabel}"? This will also delete all its contents.`)) return;
        try {
            const res = await fetch(`/api/numerology/daily/${id}`, { method: 'DELETE' });
            const data = await res.json();
            if (data.success) {
                alert('Date deleted successfully!');
                loadDailyDates();
            } else {
                alert('Error: ' + data.error);
            }
        } catch (error) {
            alert('Error deleting date');
        }
    }
    
    function exportDailyContentExcel() {
        if (!currentViewingDateId) {
            alert('Please select a date first');
            return;
        }
        window.location.href = `/numerology/export-daily/${currentViewingDateId}`;
    }

    async function viewDateContent(dateId, dateLabel) {
        currentViewingDateId = dateId;
        document.getElementById('viewDateLabel').textContent = dateLabel;
        try {
            const res = await fetch(`/api/numerology/daily/${dateId}`);
            const data = await res.json();
            if (data.success) {
                const tbody = document.getElementById('dateContentTableBody');
                if (!data.data || data.data.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="7" class="text-center">No content uploaded yet</td></tr>';
                } else {
                    // Store content data for editing
                    window.numerologyContentData = data.data;
                    tbody.innerHTML = data.data.map((content, idx) => `
                        <tr>
                            <td>${content.id}</td>
                            <td>${content.title_hn || '-'}</td>
                            <td>${content.title_en || '-'}</td>
                            <td>${(content.details_hn || '').substring(0, 50)}${(content.details_hn || '').length > 50 ? '...' : ''}</td>
                            <td>${(content.details_en || '').substring(0, 50)}${(content.details_en || '').length > 50 ? '...' : ''}</td>
                            <td>${content.images ? content.images.length : 0}</td>
                            <td>
                                <button class="btn btn-sm btn-primary me-2" onclick="editDateContent('${dateId}', ${idx})">Edit</button>
                                <button class="btn btn-sm btn-danger" onclick="deleteDateContent('${dateId}', '${content.id}')">Delete</button>
                            </td>
                        </tr>
                    `).join('');
                }
                const modal = new bootstrap.Modal(document.getElementById('viewDateContentModal'));
                modal.show();
            } else {
                alert('Error loading contents');
            }
        } catch (error) {
            alert('Error loading contents');
        }
    }
    
    function showUploadExcelForDate() {
        document.getElementById('excelFileInput').click();
    }
    
    document.getElementById('excelFileInput').addEventListener('change', function() {
        const file = this.files[0];
        if (!file) return;
        const formData = new FormData();
        formData.append('excelFile', file);
        
        fetch(`/numerology/upload-daily/${currentViewingDateId}`, {
            method: 'POST',
            body: formData
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                alert('Excel uploaded successfully!');
                viewDateContent(currentViewingDateId, document.getElementById('viewDateLabel').textContent);
            } else {
                alert('Error: ' + data.error);
            }
        })
        .catch(() => alert('Error uploading Excel'));
    });
    
    function editDateContent(dateId, contentIndex) {
        const content = window.numerologyContentData[contentIndex];
        if (!content) {
            alert('Content not found');
            return;
        }
        
        document.getElementById('editDateId').value = dateId;
        document.getElementById('editContentId').value = content.id;
        document.getElementById('editTitleHn').value = content.title_hn || '';
        document.getElementById('editTitleEn').value = content.title_en || '';
        document.getElementById('editDetailsHn').value = content.details_hn || '';
        document.getElementById('editDetailsEn').value = content.details_en || '';
        document.getElementById('editImages').value = content.images ? content.images.join(', ') : '';
        document.getElementById('editSequence').value = content.sequence || 0;
        
        const modal = new bootstrap.Modal(document.getElementById('editDateContentModal'));
        modal.show();
    }

    async function submitEditDateContent() {
        const dateId = document.getElementById('editDateId').value;
        const contentId = document.getElementById('editContentId').value;
        const images = document.getElementById('editImages').value
            .split(',')
            .map(img => img.trim())
            .filter(img => img);
        
        const payload = {
            title_hn: document.getElementById('editTitleHn').value,
            title_en: document.getElementById('editTitleEn').value,
            details_hn: document.getElementById('editDetailsHn').value,
            details_en: document.getElementById('editDetailsEn').value,
            images: images,
            sequence: parseInt(document.getElementById('editSequence').value) || 0
        };
        
        try {
            const res = await fetch(`/api/numerology/daily/${dateId}/${contentId}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });
            const data = await res.json();
            if (data.success) {
                alert('Content updated successfully!');
                const modal = bootstrap.Modal.getInstance(document.getElementById('editDateContentModal'));
                modal.hide();
                viewDateContent(dateId, document.getElementById('viewDateLabel').textContent);
            } else {
                alert('Error: ' + data.error);
            }
        } catch (error) {
            alert('Error updating content');
        }
    }
    
    async function deleteDateContent(dateId, contentId) {
        if (!confirm('Delete this content?')) return;
        try {
