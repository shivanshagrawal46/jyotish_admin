<% /* eslint-disable */ %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Saved Kundli Management | Jyotish Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@500;600;700&display=swap" rel="stylesheet">
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/sidebar.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #2D3250;
            --secondary: #424769;
            --accent: #676F9D;
            --light: #F9F9F9;
            --dark: #1A1B26;
            --success: #4CAF50;
            --error: #F44336;
            --warning: #FF9800;
            --info: #2196F3;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
        body {
            font-family: 'Inter', sans-serif;
            background: var(--light);
            min-height: 100vh;
        }
        .main-content {
            margin-left: 280px;
            padding: 2rem;
        }
        .topbar {
            background: white;
            padding: 1rem 2rem;
            border-radius: 16px;
            box-shadow: var(--shadow);
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .page-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: var(--dark);
            margin: 0;
        }
        .stats-card {
            background: white;
            border-radius: 24px;
            box-shadow: var(--shadow-lg);
            margin-bottom: 2rem;
            overflow: hidden;
        }
        .stats-card-header {
            background: var(--primary);
            color: #fff;
            padding: 1.5rem 2rem 1rem 2rem;
            border-top-left-radius: 24px;
            border-top-right-radius: 24px;
            font-family: 'Playfair Display', serif;
            font-size: 1.6rem;
            font-weight: 600;
            letter-spacing: 0.5px;
        }
        .stats-grid {
            padding: 2rem;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }
        .stat-item {
            background: #f8f9fa;
            border-radius: 16px;
            padding: 1.5rem;
            text-align: center;
            border-left: 4px solid var(--primary);
        }
        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 0.5rem;
        }
        .stat-label {
            color: var(--accent);
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 1px;
        }
        .filters-card {
            background: white;
            border-radius: 24px;
            box-shadow: var(--shadow-lg);
            margin-bottom: 2rem;
            overflow: hidden;
        }
        .filters-card-header {
            background: var(--secondary);
            color: #fff;
            padding: 1.5rem 2rem 1rem 2rem;
            border-top-left-radius: 24px;
            border-top-right-radius: 24px;
            font-family: 'Playfair Display', serif;
            font-size: 1.3rem;
            font-weight: 600;
        }
        .filters-content {
            padding: 2rem;
        }
        .kundli-card {
            background: white;
            border-radius: 24px;
            box-shadow: var(--shadow-lg);
            margin-bottom: 2rem;
            overflow: hidden;
        }
        .kundli-card-header {
            background: var(--primary);
            color: #fff;
            padding: 1.5rem 2rem 1rem 2rem;
            border-top-left-radius: 24px;
            border-top-right-radius: 24px;
            font-family: 'Playfair Display', serif;
            font-size: 1.6rem;
            font-weight: 600;
            letter-spacing: 0.5px;
        }
        .kundli-table-wrap {
            padding: 0 2rem 2rem 2rem;
        }
        .kundli-table {
            background: #fff;
            border-radius: 16px;
            box-shadow: var(--shadow);
            overflow: hidden;
        }
        .kundli-table thead {
            background: #F3F4F8;
        }
        .kundli-table th, .kundli-table td {
            vertical-align: middle;
            border: none;
        }
        .kundli-table tbody tr {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 8px 0 rgba(44, 62, 80, 0.04);
            margin-bottom: 12px;
        }
        .kundli-table tbody tr:not(:last-child) {
            border-bottom: 8px solid #f6f6fa;
        }
        .gender-badge {
            border-radius: 12px;
            padding: 0.3rem 1rem;
            font-size: 0.85rem;
            font-weight: 600;
        }
        .pagination {
            justify-content: center;
            margin-top: 2rem;
        }
        .pagination .page-link {
            border-radius: 12px;
            margin: 0 0.25rem;
            border: none;
            color: var(--primary);
            font-weight: 600;
        }
        .pagination .page-item.active .page-link {
            background: var(--primary);
            border-color: var(--primary);
        }
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--accent);
        }
        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <%- include('../partials/sidebar', { 
            activePage: 'saved-kundli',
            activeCategory: null,
            koshCategories: koshCategories || [],
            koshSubCategoriesMap: koshSubCategoriesMap || {}
        }) %>
    </nav>
    <!-- Main Content -->
    <main class="main-content">
        <!-- Topbar -->
        <div class="topbar">
            <h1 class="page-title">Saved Kundli Management</h1>
        </div>

        <!-- Statistics Cards -->
        <div class="stats-card">
            <div class="stats-card-header">
                Kundli Statistics
            </div>
            <div class="stats-grid">
                <div class="stat-item">
                    <div class="stat-number"><%= stats.totalKundlis %></div>
                    <div class="stat-label">Total Kundlis</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number"><%= stats.uniqueUsers ? stats.uniqueUsers.length : 0 %></div>
                    <div class="stat-label">Unique Users</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number"><%= genderStats.male || 0 %></div>
                    <div class="stat-label">Male</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number"><%= genderStats.female || 0 %></div>
                    <div class="stat-label">Female</div>
                </div>
            </div>
        </div>

        <!-- Filters and Search -->
        <div class="filters-card">
            <div class="filters-card-header">
                Filters & Search
            </div>
            <div class="filters-content">
                <form method="GET" action="/saved-kundli" class="row g-3">
                    <div class="col-md-4">
                        <label for="search" class="form-label fw-bold">Search</label>
                        <input type="text" class="form-control" id="search" name="search" value="<%= search || '' %>" placeholder="Name, place, or user ID">
                    </div>
                    <div class="col-md-4">
                        <label for="userId" class="form-label fw-bold">User ID</label>
                        <input type="text" class="form-control" id="userId" name="userId" value="<%= userId || '' %>" placeholder="Filter by user ID">
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <div>
                            <button type="submit" class="btn btn-primary px-4">Filter</button>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <div>
                            <a href="/saved-kundli" class="btn btn-outline-secondary px-4">Clear</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Kundli Table -->
        <div class="kundli-card">
            <div class="kundli-card-header">
                Saved Kundlis (<%= total %> total)
            </div>
            <div class="kundli-table-wrap">
                <% if (savedKundlis.length === 0) { %>
                    <div class="empty-state">
                        <i class="fas fa-star"></i>
                        <h5>No saved kundlis found</h5>
                        <p>No kundlis match your current filters.</p>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table kundli-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>User ID</th>
                                    <th>Name</th>
                                    <th>Date of Birth</th>
                                    <th>Time of Birth</th>
                                    <th>Place</th>
                                    <th>Gender</th>
                                    <th>Created At</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% savedKundlis.forEach(kundli => { %>
                                    <tr>
                                        <td>
                                            <strong><%= kundli._id.toString().substring(0, 8) %>...</strong>
                                        </td>
                                        <td>
                                            <code><%= kundli.userId %></code>
                                        </td>
                                        <td>
                                            <strong><%= kundli.name %></strong>
                                        </td>
                                        <td>
                                            <%= new Date(kundli.dateOfBirth).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= kundli.timeOfBirth %>
                                        </td>
                                        <td>
                                            <%= kundli.place %>
                                        </td>
                                        <td>
                                            <span class="gender-badge <%= kundli.gender === 'male' ? 'bg-info' : kundli.gender === 'female' ? 'bg-warning' : 'bg-secondary' %> text-white">
                                                <%= kundli.gender.charAt(0).toUpperCase() + kundli.gender.slice(1) %>
                                            </span>
                                        </td>
                                        <td>
                                            <small>
                                                <%= new Date(kundli.createdAt).toLocaleDateString() %><br>
                                                <%= new Date(kundli.createdAt).toLocaleTimeString() %>
                                            </small>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/saved-kundli/<%= kundli._id %>" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="deleteKundli('<%= kundli._id %>')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <% if (totalPages > 1) { %>
                        <nav aria-label="Kundli pagination">
                            <ul class="pagination">
                                <% if (hasPrev) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/saved-kundli?page=<%= currentPage - 1 %><%= userId ? '&userId=' + userId : '' %><%= search ? '&search=' + search : '' %>">Previous</a>
                                    </li>
                                <% } %>
                                
                                <% for (let i = 1; i <= totalPages; i++) { %>
                                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="/saved-kundli?page=<%= i %><%= userId ? '&userId=' + userId : '' %><%= search ? '&search=' + search : '' %>"><%= i %></a>
                                    </li>
                                <% } %>
                                
                                <% if (hasNext) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="/saved-kundli?page=<%= currentPage + 1 %><%= userId ? '&userId=' + userId : '' %><%= search ? '&search=' + search : '' %>">Next</a>
                                    </li>
                                <% } %>
                            </ul>
                        </nav>
                    <% } %>
                <% } %>
            </div>
        </div>
    </main>
</body>
</html>

<script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
<script>
function deleteKundli(kundliId) {
    if (confirm('Are you sure you want to delete this saved kundli? This action cannot be undone.')) {
        fetch(`/saved-kundli/${kundliId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json'
            }
        }).then(response => {
            if (response.ok) {
                window.location.reload();
            } else {
                alert('Error deleting saved kundli');
            }
        }).catch(error => {
            console.error('Error:', error);
            alert('Error deleting saved kundli');
        });
    }
}
</script>

