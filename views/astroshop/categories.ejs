<% /* eslint-disable */ %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories | Astro Shop</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@500;600;700&display=swap" rel="stylesheet">
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/sidebar.css" rel="stylesheet">
    <style>
        :root {
            --primary: #2D3250;
            --secondary: #424769;
            --accent: #676F9D;
            --light: #F9F9F9;
            --dark: #1A1B26;
            --success: #4CAF50;
            --error: #F44336;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
        body {
            font-family: 'Inter', sans-serif;
            background: var(--light);
            min-height: 100vh;
        }
        .main-content {
            margin-left: 280px;
            padding: 2rem;
        }
        .topbar {
            background: white;
            padding: 1rem 2rem;
            border-radius: 16px;
            box-shadow: var(--shadow);
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .page-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: var(--dark);
            margin: 0;
        }
        .add-category-btn {
            background: var(--primary);
            color: #fff;
            border: none;
            border-radius: 16px;
            padding: 0.75rem 2rem;
            font-weight: 600;
            font-size: 1rem;
            box-shadow: none;
            transition: background 0.2s, color 0.2s;
            text-decoration: none;
        }
        .add-category-btn:hover {
            background: var(--accent);
            color: #fff;
            text-decoration: none;
        }
        .category-card {
            background: white;
            border-radius: 24px;
            box-shadow: var(--shadow-lg);
            margin-bottom: 2rem;
            overflow: hidden;
        }
        .category-card-header {
            background: var(--primary);
            color: #fff;
            padding: 1.5rem 2rem 1rem 2rem;
            border-top-left-radius: 24px;
            border-top-right-radius: 24px;
            font-family: 'Playfair Display', serif;
            font-size: 1.6rem;
            font-weight: 600;
            letter-spacing: 0.5px;
        }
        .category-table-wrap {
            padding: 0 2rem 2rem 2rem;
        }
        .category-table {
            background: #fff;
            border-radius: 16px;
            box-shadow: var(--shadow);
            overflow: hidden;
        }
        .category-table thead {
            background: #F3F4F8;
        }
        .category-table th, .category-table td {
            vertical-align: middle;
            border: none;
        }
        .category-table tbody tr {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 8px 0 rgba(44, 62, 80, 0.04);
            margin-bottom: 12px;
        }
        .category-table tbody tr:not(:last-child) {
            border-bottom: 8px solid #f6f6fa;
        }
    </style>
</head>
<body>
    <nav class="sidebar">
        <%- include('../partials/sidebar', { activePage: 'astro-shop', activeCategory: null, koshCategories: [], mcqCategories: [] }) %>
    </nav>
    <main class="main-content">
        <div class="topbar">
            <h1 class="page-title">Categories</h1>
            <a href="/astro-shop/categories/add" class="add-category-btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="margin-right:0.5rem;vertical-align:middle;">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Add Category
            </a>
        </div>
        <div class="category-card">
            <div class="category-card-header">
                Categories List
            </div>
            <div class="category-table-wrap">
                <div class="table-responsive">
                    <table class="table category-table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Created At</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (categories && categories.length > 0) { %>
                                <% categories.forEach(function(category) { %>
                                    <tr>
                                        <td><%= category.name %></td>
                                        <td><%= new Date(category.created_at).toLocaleDateString() %></td>
                                        <td>
                                            <a href="/astro-shop/categories/edit/<%= category._id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                                            <form action="/astro-shop/categories/delete/<%= category._id %>" method="POST" style="display:inline;" onsubmit="return confirm('Delete this category?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="3" class="text-center">No categories found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html> 