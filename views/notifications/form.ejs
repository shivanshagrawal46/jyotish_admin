<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= formTitle %> | Admin Panel</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@500;600;700&display=swap" rel="stylesheet">
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/sidebar.css" rel="stylesheet">
    <style>
        :root {
            --primary: #2D3250;
            --secondary: #424769;
            --accent: #676F9D;
            --light: #F9F9F9;
            --dark: #1A1B26;
        }
        body {
            font-family: 'Inter', sans-serif;
            background: var(--light);
            min-height: 100vh;
        }
        .main-content {
            margin-left: 280px;
            padding: 2rem;
        }
        .topbar {
            background: white;
            padding: 1rem 2rem;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .page-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: var(--dark);
            margin: 0;
        }
        .content-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 800px;
            margin: 0 auto;
        }
        .card-header {
            background: var(--primary);
            color: white;
            padding: 1.5rem 2rem;
        }
        .card-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            margin: 0;
        }
        .card-body {
            padding: 2rem;
        }
        .form-label {
            font-weight: 500;
            color: var(--dark);
            margin-bottom: 0.5rem;
            font-size: 1rem;
        }
        .form-control, .form-select {
            border: 2px solid #E5E7EB;
            border-radius: 12px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
        }
        .form-control:focus, .form-select:focus {
            border-color: var(--accent);
            box-shadow: 0 0 0 4px rgba(103, 111, 157, 0.1);
        }
        .btn-primary {
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        .btn-primary:hover {
            background: var(--secondary);
            transform: translateY(-1px);
        }
        .btn-secondary {
            background: rgba(103, 111, 157, 0.1);
            color: var(--secondary);
            border: none;
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        .btn-secondary:hover {
            background: rgba(103, 111, 157, 0.2);
            color: var(--primary);
        }
        .form-check-input:checked {
            background-color: var(--primary);
            border-color: var(--primary);
        }
        .form-text {
            color: #666;
            font-size: 0.875rem;
        }
        .preview-section {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 1.5rem;
            margin-top: 2rem;
        }
        .preview-title {
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 1rem;
        }
        .notification-preview {
            background: white;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
        }
        .preview-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 0.5rem;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <%- include('../partials/sidebar', { 
            activePage: 'notifications', 
            username: username,
            activeCategory: activeCategory,
            activeSubCategory: activeSubCategory,
            koshCategories: koshCategories,
            mcqCategories: mcqCategories
        }) %>
    </nav>
    
    <main class="main-content">
        <div class="topbar">
            <h1 class="page-title"><%= formTitle %></h1>
            <a href="/notifications" class="btn btn-secondary">Back to Notifications</a>
        </div>

        <div class="content-card">
            <div class="card-header">
                <h2 class="card-title"><%= formTitle %></h2>
            </div>
            <div class="card-body">

                <form method="POST" action="<%= formAction %>">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label for="title" class="form-label">Title *</label>
                                <input type="text" class="form-control" id="title" name="title" 
                                       value="<%= notification ? notification.title : '' %>" required>
                                <div class="form-text">A clear, concise title for the notification</div>
                            </div>

                            <div class="mb-3">
                                <label for="message" class="form-label">Message *</label>
                                <textarea class="form-control" id="message" name="message" rows="4" required><%= notification ? notification.message : '' %></textarea>
                                <div class="form-text">The main content of the notification</div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="type" class="form-label">Type</label>
                                        <select class="form-select" id="type" name="type">
                                            <option value="info" <%= notification && notification.type === 'info' ? 'selected' : '' %>>Info</option>
                                            <option value="success" <%= notification && notification.type === 'success' ? 'selected' : '' %>>Success</option>
                                            <option value="warning" <%= notification && notification.type === 'warning' ? 'selected' : '' %>>Warning</option>
                                            <option value="error" <%= notification && notification.type === 'error' ? 'selected' : '' %>>Error</option>
                                            <option value="announcement" <%= notification && notification.type === 'announcement' ? 'selected' : '' %>>Announcement</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="priority" class="form-label">Priority</label>
                                        <select class="form-select" id="priority" name="priority">
                                            <option value="low" <%= notification && notification.priority === 'low' ? 'selected' : '' %>>Low</option>
                                            <option value="medium" <%= notification && notification.priority === 'medium' ? 'selected' : '' %>>Medium</option>
                                            <option value="high" <%= notification && notification.priority === 'high' ? 'selected' : '' %>>High</option>
                                            <option value="urgent" <%= notification && notification.priority === 'urgent' ? 'selected' : '' %>>Urgent</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="targetAudience" class="form-label">Target Audience</label>
                                <select class="form-select" id="targetAudience" name="targetAudience">
                                    <option value="all" <%= notification && notification.targetAudience === 'all' ? 'selected' : '' %>>All Users</option>
                                    <option value="premium" <%= notification && notification.targetAudience === 'premium' ? 'selected' : '' %>>Premium Users Only</option>
                                    <option value="free" <%= notification && notification.targetAudience === 'free' ? 'selected' : '' %>>Free Users Only</option>
                                    <option value="specific" <%= notification && notification.targetAudience === 'specific' ? 'selected' : '' %>>Specific Users</option>
                                </select>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="scheduledAt" class="form-label">Scheduled At</label>
                                        <input type="datetime-local" class="form-control" id="scheduledAt" name="scheduledAt" 
                                               value="<%= notification && notification.scheduledAt ? new Date(notification.scheduledAt).toISOString().slice(0, 16) : '' %>">
                                        <div class="form-text">When to show this notification</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="expiresAt" class="form-label">Expires At</label>
                                        <input type="datetime-local" class="form-control" id="expiresAt" name="expiresAt" 
                                               value="<%= notification && notification.expiresAt ? new Date(notification.expiresAt).toISOString().slice(0, 16) : '' %>">
                                        <div class="form-text">When to stop showing (optional)</div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="actionUrl" class="form-label">Action URL</label>
                                        <input type="url" class="form-control" id="actionUrl" name="actionUrl" 
                                               value="<%= notification ? notification.actionUrl : '' %>" placeholder="https://example.com">
                                        <div class="form-text">Optional URL for action button</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="actionText" class="form-label">Action Text</label>
                                        <input type="text" class="form-control" id="actionText" name="actionText" 
                                               value="<%= notification ? notification.actionText : '' %>" placeholder="Learn More">
                                        <div class="form-text">Text for action button</div>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="imageUrl" class="form-label">Image URL</label>
                                <input type="url" class="form-control" id="imageUrl" name="imageUrl" 
                                       value="<%= notification ? notification.imageUrl : '' %>" placeholder="https://example.com/image.jpg">
                                <div class="form-text">Optional image for the notification</div>
                            </div>

                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="isActive" name="isActive" 
                                           <%= notification && notification.isActive ? 'checked' : 'checked' %>>
                                    <label class="form-check-label" for="isActive">
                                        Active (show this notification)
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="preview-section">
                                <h5 class="preview-title">Preview</h5>
                                <div class="notification-preview" id="preview">
                                    <div class="preview-header">
                                        <h6 id="preview-title">Notification Title</h6>
                                    </div>
                                    <p id="preview-message" style="margin: 0; color: #666;">Notification message will appear here...</p>
                                    <% if (notification && notification.actionUrl) { %>
                                        <div class="mt-2">
                                            <a href="#" class="btn btn-sm btn-primary" id="preview-action" style="display: none;">Action</a>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Save Notification</button>
                        <a href="/notifications" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script>
        // Live preview functionality
        function updatePreview() {
            const title = document.getElementById('title').value || 'Notification Title';
            const message = document.getElementById('message').value || 'Notification message will appear here...';
            const actionUrl = document.getElementById('actionUrl').value;
            const actionText = document.getElementById('actionText').value;

            document.getElementById('preview-title').textContent = title;
            document.getElementById('preview-message').textContent = message;
            
            // Update action button
            const actionBtn = document.getElementById('preview-action');
            if (actionUrl && actionText) {
                actionBtn.textContent = actionText;
                actionBtn.href = actionUrl;
                actionBtn.style.display = 'inline-block';
            } else {
                actionBtn.style.display = 'none';
            }
        }

        // Add event listeners
        document.getElementById('title').addEventListener('input', updatePreview);
        document.getElementById('message').addEventListener('input', updatePreview);
        document.getElementById('actionUrl').addEventListener('input', updatePreview);
        document.getElementById('actionText').addEventListener('input', updatePreview);

        // Initial preview update
        updatePreview();
    </script>
</body>
</html>
