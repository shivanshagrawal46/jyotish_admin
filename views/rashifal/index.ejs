<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rashifal Management | Sanskrit Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@500;600;700&display=swap" rel="stylesheet">
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/sidebar.css" rel="stylesheet">
    <style>
        :root {
            --primary: #2D3250;
            --secondary: #424769;
            --accent: #676F9D;
            --light: #F9F9F9;
            --dark: #1A1B26;
            --success: #4CAF50;
            --error: #F44336;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--light);
            min-height: 100vh;
        }

        .main-content {
            margin-left: 280px;
            padding: 2rem;
        }

        .topbar {
            background: white;
            padding: 1rem 2rem;
            border-radius: 16px;
            box-shadow: var(--shadow);
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .page-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: var(--dark);
            margin: 0;
        }

        .content-card {
            background: white;
            border-radius: 16px;
            box-shadow: var(--shadow);
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .card-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.25rem;
            color: var(--dark);
            margin-bottom: 1.5rem;
        }

        /* Navigation Tabs Styles */
        .nav-tabs {
            border: none;
            margin-bottom: 2rem;
            gap: 1rem;
        }

        .nav-tabs .nav-link {
            border: none;
            color: var(--dark);
            font-weight: 500;
            padding: 0.75rem 1.5rem;
            border-radius: 12px;
            transition: all 0.3s ease;
            background: rgba(103, 111, 157, 0.1);
        }

        .nav-tabs .nav-link:hover {
            background: rgba(103, 111, 157, 0.2);
        }

        .nav-tabs .nav-link.active {
            background: var(--primary);
            color: white;
        }

        .tab-content {
            padding: 1rem 0;
        }

        .tab-pane {
            display: none;
        }

        .tab-pane.active {
            display: block;
        }

        .rashifal-card {
            background: white;
            border-radius: 24px;
            box-shadow: var(--shadow-lg);
            margin-bottom: 2rem;
            overflow: hidden;
        }
        .rashifal-card-header {
            background: var(--primary);
            color: #fff;
            padding: 1.5rem 2rem 1rem 2rem;
            border-top-left-radius: 24px;
            border-top-right-radius: 24px;
            font-family: 'Playfair Display', serif;
            font-size: 1.6rem;
            font-weight: 600;
            letter-spacing: 0.5px;
        }
        .rashifal-actions {
            padding: 1.5rem 2rem 0.5rem 2rem;
            display: flex;
            gap: 1rem;
        }
        .pill-btn {
            background: #F3F4F8;
            color: var(--primary);
            border: none;
            border-radius: 16px;
            padding: 0.75rem 2rem;
            font-weight: 600;
            font-size: 1rem;
            box-shadow: none;
            transition: background 0.2s, color 0.2s;
            text-decoration: none;
        }
        .pill-btn svg {
            margin-right: 0.5rem;
        }
        .pill-btn:hover {
            background: var(--primary);
            color: #fff;
            text-decoration: none;
        }
        .upload-excel-btn {
            margin-top: 1.2rem;
            margin-bottom: 1.2rem;
            display: inline-block;
        }
        .rashifal-table-wrap {
            padding: 0 2rem 2rem 2rem;
        }
        .rashifal-table {
            background: #fff;
            border-radius: 16px;
            box-shadow: var(--shadow);
            overflow: hidden;
        }
        .rashifal-table thead {
            background: #F3F4F8;
        }
        .rashifal-table th, .rashifal-table td {
            vertical-align: middle;
            border: none;
        }
        .rashifal-table tbody tr {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 8px 0 rgba(44, 62, 80, 0.04);
            margin-bottom: 12px;
        }
        .rashifal-table tbody tr:not(:last-child) {
            border-bottom: 8px solid #f6f6fa;
        }
        .action-icon-btn {
            background: none;
            border: none;
            padding: 0.4rem 0.6rem;
            border-radius: 8px;
            transition: background 0.2s;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }
        .action-icon-btn.edit {
            color: var(--primary);
        }
        .action-icon-btn.delete {
            color: #fff;
            background: #F44336;
        }
        .action-icon-btn.delete:hover {
            background: #d32f2f;
        }
        .action-icon-btn.edit:hover {
            background: #e3e6f0;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar">
        <%- include('../partials/sidebar', { 
            activePage: 'rashifal',
            activeCategory: null,
            koshCategories: [],
            mcqCategories: []
        }) %>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Topbar -->
        <div class="topbar">
            <h1 class="page-title">Rashifal Management</h1>
            <div class="user-menu">
                <div class="user-avatar">
                    <%= username ? username.charAt(0).toUpperCase() : 'A' %>
                </div>
            </div>
        </div>

        <!-- Navigation Tabs -->
        <ul class="nav nav-tabs mb-4" id="rashifalTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="daily-tab" data-bs-toggle="tab" data-bs-target="#daily" type="button" role="tab" aria-controls="daily" aria-selected="true"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" style="vertical-align:middle;margin-right:0.5rem;opacity:0.7;" viewBox="0 0 16 16">
                    <path d="M2 2h12v12H2z" fill="none"/>
                    <path d="M2 2h12v12H2z" stroke="var(--accent)" stroke-width="1.5" fill="none"/>
                    <path d="M4 6h8M4 10h8" stroke="var(--primary)" stroke-width="1.2" stroke-linecap="round"/>
                </svg>
                    Daily
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="monthly-tab" data-bs-toggle="tab" data-bs-target="#monthly" type="button" role="tab" aria-controls="monthly" aria-selected="false"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" style="vertical-align:middle;margin-right:0.5rem;opacity:0.7;" viewBox="0 0 16 16">
                    <path d="M2 2h12v12H2z" fill="none"/>
                    <path d="M2 2h12v12H2z" stroke="var(--accent)" stroke-width="1.5" fill="none"/>
                    <path d="M4 6h8M4 10h8" stroke="var(--primary)" stroke-width="1.2" stroke-linecap="round"/>
                </svg>
                    Monthly
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="yearly-tab" data-bs-toggle="tab" data-bs-target="#yearly" type="button" role="tab" aria-controls="yearly" aria-selected="false"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" style="vertical-align:middle;margin-right:0.5rem;opacity:0.7;" viewBox="0 0 16 16">
                    <path d="M2 2h12v12H2z" fill="none"/>
                    <path d="M2 2h12v12H2z" stroke="var(--accent)" stroke-width="1.5" fill="none"/>
                    <path d="M4 6h8M4 10h8" stroke="var(--primary)" stroke-width="1.2" stroke-linecap="round"/>
                </svg>
                    Yearly
                </button>
            </li>
        </ul>
        <!-- Tab Content -->
        <div class="tab-content" id="rashifalTabContent">
            <!-- Daily Tab -->
            <div class="tab-pane fade show active" id="daily" role="tabpanel" aria-labelledby="daily-tab">
                <div class="rashifal-card">
                    <div class="rashifal-card-header">
                        Daily Rashifal - Manage Dates
                    </div>
                    <div class="rashifal-actions">
                        <button class="pill-btn upload-excel-btn" onclick="showAddRashifalDateModal()">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-2" viewBox="0 0 16 16">
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                            </svg>
                            Create New Date
                        </button>
                    </div>
                    <div class="rashifal-table-wrap">
                        <div class="table-responsive">
                            <table class="table rashifal-table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Date Label</th>
                                        <th>Date ISO</th>
                                        <th>Notes</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody id="rashifalDailyDatesTable">
                                    <tr>
                                        <td colspan="6" class="text-center">Loading dates...</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Monthly Tab -->
            <div class="tab-pane fade" id="monthly" role="tabpanel" aria-labelledby="monthly-tab">
                <div class="rashifal-card">
                    <div class="rashifal-card-header">
                        Monthly Rashifal
                    </div>
                    <div class="rashifal-actions">
                        <!-- Month navigation bar -->
                        <ul class="nav nav-pills mb-3" id="rashifalMonthTabs" role="tablist" style="flex-wrap: wrap;">
                            <% const months = [
                                'January', 'February', 'March', 'April', 'May', 'June',
                                'July', 'August', 'September', 'October', 'November', 'December'
                            ]; %>
                            <% months.forEach(function(month, idx) { %>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link<%= idx === 0 ? ' active' : '' %>" id="rashifal-month-<%= idx %>-tab" data-bs-toggle="pill" data-bs-target="#rashifal-month-<%= idx %>" type="button" role="tab" aria-controls="rashifal-month-<%= idx %>" aria-selected="<%= idx === 0 ? 'true' : 'false' %>">
                                        <%= month %>
                                    </button>
                                </li>
                            <% }); %>
                        </ul>
                    </div>
                    <div class="rashifal-table-wrap">
                        <div class="tab-content" id="rashifalMonthTabContent">
                            <% months.forEach(function(month, idx) { %>
                                <div class="tab-pane fade<%= idx === 0 ? ' show active' : '' %>" id="rashifal-month-<%= idx %>" role="tabpanel" aria-labelledby="rashifal-month-<%= idx %>-tab">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h5 class="mb-0"><%= month %> Rashifal</h5>
                                        <a href="#" class="pill-btn upload-excel-btn" onclick="document.getElementById('rashifal-month-file-<%= idx %>').click(); return false;">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-2" viewBox="0 0 16 16">
                                                <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
                                                <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z"/>
                                            </svg>
                                            Upload Excel
                                        </a>
                                        <input type="file" id="rashifal-month-file-<%= idx %>" class="d-none" accept=".xlsx,.xls" onchange="uploadRashifalMonthlyExcel('<%= month %>', this)" />
                                    </div>
                                    <div class="table-responsive">
                                        <table class="table rashifal-table">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Title (Hindi)</th>
                                                    <th>Title (English)</th>
                                                    <th>Details (Hindi)</th>
                                                    <th>Details (English)</th>
                                                </tr>
                                            </thead>
                                            <tbody id="rashifal-month-tbody-<%= idx %>">
                                                <% if (monthlyRashifals && monthlyRashifals[month] && monthlyRashifals[month].length > 0) { %>
                                                    <% monthlyRashifals[month].forEach(function(entry, i) { %>
                                                        <tr>
                                                            <td><%= i + 1 %></td>
                                                            <td><%= entry.title_hn %></td>
                                                            <td><%= entry.title_en %></td>
                                                            <td><%= entry.details_hn %></td>
                                                            <td><%= entry.details_en %></td>
                                                        </tr>
                                                    <% }); %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="5" class="text-center">No data for <%= month %></td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Yearly Tab -->
            <div class="tab-pane fade" id="yearly" role="tabpanel" aria-labelledby="yearly-tab">
                <div class="rashifal-card">
                    <div class="rashifal-card-header">
                        Yearly Rashifal
                    </div>
                    <div class="rashifal-actions">
                        <a href="/rashifal/upload-yearly" class="pill-btn upload-excel-btn">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-2" viewBox="0 0 16 16">
                                <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
                                <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z"/>
                            </svg>
                            Upload Excel
                        </a>
                    </div>
                    <div class="rashifal-table-wrap">
                        <div class="table-responsive">
                            <table class="table rashifal-table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Date</th>
                                        <th>Title (Hindi)</th>
                                        <th>Title (English)</th>
                                        <th>Details (Hindi)</th>
                                        <th>Details (English)</th>
                                        <th>Images</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (typeof yearlyRashifals !== 'undefined' && yearlyRashifals.length > 0) { %>
                                        <% yearlyRashifals.forEach((rashifal, idx) => { %>
                                            <tr>
                                                <td><%= idx + 1 %></td>
                                                <td><%= rashifal.date %></td>
                                                <td><%= rashifal.title_hn %></td>
                                                <td><%= rashifal.title_en %></td>
                                                <td><%= rashifal.details_hn %></td>
                                                <td><%= rashifal.details_en %></td>
                                                <td><%= rashifal.images ? rashifal.images.length : 0 %></td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="7" class="text-center">No yearly rashifals found</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Add Date Modal -->
    <div class="modal fade" id="addRashifalDateModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Daily Date</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="addRashifalDateForm">
                        <div class="mb-3">
                            <label class="form-label">Date Label *</label>
                            <input type="text" class="form-control" name="dateLabel" required placeholder="e.g., 2024-01-15, Jan 15, etc.">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Date ISO (Optional)</label>
                            <input type="date" class="form-control" name="dateISO">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Notes (Optional)</label>
                            <textarea class="form-control" name="notes" rows="3"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="submitAddRashifalDate()">Create Date</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Date Modal -->
    <div class="modal fade" id="editRashifalDateModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Date</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="editRashifalDateForm">
                        <input type="hidden" name="dateId">
                        <div class="mb-3">
                            <label class="form-label">Date Label *</label>
                            <input type="text" class="form-control" name="dateLabel" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Date ISO (Optional)</label>
                            <input type="date" class="form-control" name="dateISO">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Notes (Optional)</label>
                            <textarea class="form-control" name="notes" rows="3"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="submitEditRashifalDate()">Save Changes</button>
                </div>
            </div>
        </div>
    </div>

    <!-- View Date Content Modal -->
    <div class="modal fade" id="viewRashifalDateContentModal" tabindex="-1">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">View Contents for Date: <span id="viewRashifalDateLabel"></span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <button class="btn btn-primary" onclick="showRashifalUploadExcelForDate()">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-2" viewBox="0 0 16 16">
                                <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
                                <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z"/>
                            </svg>
                            Upload Excel (Replace Contents)
                        </button>
                        <input type="file" id="rashifalExcelFileInput" class="d-none" accept=".xlsx,.xls">
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Title (Hindi)</th>
                                    <th>Title (English)</th>
                                    <th>Details (Hindi)</th>
                                    <th>Details (English)</th>
                                    <th>Images</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="rashifalDateContentTableBody">
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <div id="rashifal-months-data" data-months='<%- JSON.stringify(months) %>' style="display:none;"></div>
    <script>
    const monthsDataDiv = document.getElementById('rashifal-months-data');
    window.rashifalMonths = JSON.parse(monthsDataDiv.getAttribute('data-months'));

    // Daily Rashifal Date Management
    let currentViewingRashifalDateId = null;

    window.addEventListener('DOMContentLoaded', function() {
        loadRashifalDailyDates();
    });

    async function loadRashifalDailyDates() {
        try {
            const res = await fetch('/api/rashifal/daily');
            const data = await res.json();
            if (data.success) {
                renderRashifalDailyDatesTable(data.data);
            } else {
                document.getElementById('rashifalDailyDatesTable').innerHTML = '<tr><td colspan="6" class="text-center">Error loading dates</td></tr>';
            }
        } catch (error) {
            document.getElementById('rashifalDailyDatesTable').innerHTML = '<tr><td colspan="6" class="text-center">Error loading dates</td></tr>';
        }
    }

    function renderRashifalDailyDatesTable(dates) {
        const tbody = document.getElementById('rashifalDailyDatesTable');
        if (!dates || dates.length === 0) {
            tbody.innerHTML = '<tr><td colspan="6" class="text-center">No dates created yet</td></tr>';
            return;
        }
        tbody.innerHTML = dates.map((date) => `
            <tr>
                <td>${date.id}</td>
                <td>${date.dateLabel || '-'}</td>
                <td>${date.dateISO ? new Date(date.dateISO).toLocaleDateString() : '-'}</td>
                <td>${date.notes || '-'}</td>
                <td>${new Date(date.createdAt).toLocaleDateString()}</td>
                <td>
                    <button class="btn btn-sm btn-primary me-2" onclick="viewRashifalDateContent('${date._id}', '${date.dateLabel}')">View Contents</button>
                    <button class="btn btn-sm btn-warning me-2" onclick="editRashifalDate('${date._id}', '${date.dateLabel}', ${date.dateISO ? `'${date.dateISO}'` : 'null'}, ${date.notes ? `'${date.notes}'` : 'null'})">Edit</button>
                    <button class="btn btn-sm btn-danger" onclick="deleteRashifalDate('${date._id}', '${date.dateLabel}')">Delete</button>
                </td>
            </tr>
        `).join('');
    }

    function showAddRashifalDateModal() {
        document.getElementById('addRashifalDateForm').reset();
        const modal = new bootstrap.Modal(document.getElementById('addRashifalDateModal'));
        modal.show();
    }

    async function submitAddRashifalDate() {
        const form = document.getElementById('addRashifalDateForm');
        const formData = new FormData(form);
        const payload = {
            dateLabel: formData.get('dateLabel'),
            dateISO: formData.get('dateISO') || null,
            notes: formData.get('notes') || null
        };
        try {
            const res = await fetch('/api/rashifal/daily', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });
            const data = await res.json();
            if (data.success) {
                alert('Date created successfully!');
                const modal = bootstrap.Modal.getInstance(document.getElementById('addRashifalDateModal'));
                modal.hide();
                loadRashifalDailyDates();
            } else {
                alert('Error: ' + data.error);
            }
        } catch (error) {
            alert('Error creating date');
        }
    }

    function editRashifalDate(id, dateLabel, dateISO, notes) {
        const form = document.getElementById('editRashifalDateForm');
        form.querySelector('[name="dateId"]').value = id;
        form.querySelector('[name="dateLabel"]').value = dateLabel;
        if (dateISO && dateISO !== 'null') {
            const dateValue = new Date(dateISO).toISOString().split('T')[0];
            form.querySelector('[name="dateISO"]').value = dateValue;
        } else {
            form.querySelector('[name="dateISO"]').value = '';
        }
        form.querySelector('[name="notes"]').value = notes && notes !== 'null' ? notes : '';
        const modal = new bootstrap.Modal(document.getElementById('editRashifalDateModal'));
        modal.show();
    }

    async function submitEditRashifalDate() {
        const form = document.getElementById('editRashifalDateForm');
        const dateId = form.querySelector('[name="dateId"]').value;
        const payload = {
            dateLabel: form.querySelector('[name="dateLabel"]').value,
            dateISO: form.querySelector('[name="dateISO"]').value || null,
            notes: form.querySelector('[name="notes"]').value || null
        };
        try {
            const res = await fetch(`/api/rashifal/daily/${dateId}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });
            const data = await res.json();
            if (data.success) {
                alert('Date updated successfully!');
                const modal = bootstrap.Modal.getInstance(document.getElementById('editRashifalDateModal'));
                modal.hide();
                loadRashifalDailyDates();
            } else {
                alert('Error: ' + data.error);
            }
        } catch (error) {
            alert('Error updating date');
        }
    }

    async function deleteRashifalDate(id, dateLabel) {
        if (!confirm(`Delete date "${dateLabel}"? This will also delete all its contents.`)) return;
        try {
            const res = await fetch(`/api/rashifal/daily/${id}`, { method: 'DELETE' });
            const data = await res.json();
            if (data.success) {
                alert('Date deleted successfully!');
                loadRashifalDailyDates();
            } else {
                alert('Error: ' + data.error);
            }
        } catch (error) {
            alert('Error deleting date');
        }
    }

    async function viewRashifalDateContent(dateId, dateLabel) {
        currentViewingRashifalDateId = dateId;
        document.getElementById('viewRashifalDateLabel').textContent = dateLabel;
        try {
            const res = await fetch(`/api/rashifal/daily/${dateId}`);
            const data = await res.json();
            if (data.success) {
                const tbody = document.getElementById('rashifalDateContentTableBody');
                if (!data.data || data.data.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="7" class="text-center">No content uploaded yet</td></tr>';
                } else {
                    tbody.innerHTML = data.data.map((content) => `
                        <tr>
                            <td>${content.id}</td>
                            <td>${content.title_hn || '-'}</td>
                            <td>${content.title_en || '-'}</td>
                            <td>${content.details_hn || '-'}</td>
                            <td>${content.details_en || '-'}</td>
                            <td>${content.images ? content.images.length : 0}</td>
                            <td>
                                <button class=\"btn btn-sm btn-danger\" onclick=\"deleteRashifalDateContent('${dateId}', '${content.id}')\">Delete</button>
                            </td>
                        </tr>
                    `).join('');
                }
                const modal = new bootstrap.Modal(document.getElementById('viewRashifalDateContentModal'));
                modal.show();
            } else {
                alert('Error loading contents');
            }
        } catch (error) {
            alert('Error loading contents');
        }
    }

    function showRashifalUploadExcelForDate() {
        document.getElementById('rashifalExcelFileInput').click();
    }

    document.getElementById('rashifalExcelFileInput').addEventListener('change', function() {
        const file = this.files[0];
        if (!file) return;
        const formData = new FormData();
        formData.append('excelFile', file);

        fetch(`/rashifal/upload-daily/${currentViewingRashifalDateId}`, {
            method: 'POST',
            body: formData
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                alert('Excel uploaded successfully!');
                viewRashifalDateContent(currentViewingRashifalDateId, document.getElementById('viewRashifalDateLabel').textContent);
            } else {
                alert('Error: ' + data.error);
            }
        })
        .catch(() => alert('Error uploading Excel'));
    });

    async function deleteRashifalDateContent(dateId, contentNumericId) {
        if (!confirm('Delete this content?')) return;
        try {
            const res = await fetch(`/api/rashifal/daily/${dateId}/${contentNumericId}`, { method: 'DELETE' });
            const data = await res.json();
            if (data.success) {
                alert('Content deleted!');
                viewRashifalDateContent(dateId, document.getElementById('viewRashifalDateLabel').textContent);
            } else {
                alert('Error: ' + data.error);
            }
        } catch (error) {
            alert('Error deleting content');
        }
    }
