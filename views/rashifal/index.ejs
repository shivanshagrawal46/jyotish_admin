    <div id="rashifal-months-data" data-months='<%- JSON.stringify(months) %>' style="display:none;"></div>
    <script>
    const monthsDataDiv = document.getElementById('rashifal-months-data');
    window.rashifalMonths = JSON.parse(monthsDataDiv.getAttribute('data-months'));

    // Daily Rashifal Date Management
    let currentViewingRashifalDateId = null;

    window.addEventListener('DOMContentLoaded', function() {
        loadRashifalDailyDates();
    });

    async function loadRashifalDailyDates() {
        try {
            const res = await fetch('/api/rashifal/daily');
            const data = await res.json();
            if (data.success) {
                renderRashifalDailyDatesTable(data.data);
            } else {
                document.getElementById('rashifalDailyDatesTable').innerHTML = '<tr><td colspan="6" class="text-center">Error loading dates</td></tr>';
            }
        } catch (error) {
            document.getElementById('rashifalDailyDatesTable').innerHTML = '<tr><td colspan="6" class="text-center">Error loading dates</td></tr>';
        }
    }

    function renderRashifalDailyDatesTable(dates) {
        const tbody = document.getElementById('rashifalDailyDatesTable');
        if (!dates || dates.length === 0) {
            tbody.innerHTML = '<tr><td colspan="7" class="text-center">No dates created yet</td></tr>';
            return;
        }
        tbody.innerHTML = dates.map((date) => `
            <tr>
                <td>
                    <input type="checkbox" class="rashifal-date-checkbox" value="${date._id}" onchange="updateSelectedRashifalCount()">
                </td>
                <td>${date.id}</td>
                <td>${date.dateLabel || '-'}</td>
                <td>${date.dateISO ? new Date(date.dateISO).toLocaleDateString() : '-'}</td>
                <td>${date.notes || '-'}</td>
                <td>${new Date(date.createdAt).toLocaleDateString()}</td>
                <td>
                    <button class="btn btn-sm btn-primary me-2" onclick="viewRashifalDateContent('${date._id}', '${date.dateLabel}')">View Contents</button>
                    <button class="btn btn-sm btn-warning me-2" onclick="editRashifalDate('${date._id}', '${date.dateLabel}', ${date.dateISO ? `'${date.dateISO}'` : 'null'}, ${date.notes ? `'${date.notes}'` : 'null'})">Edit</button>
                    <button class="btn btn-sm btn-danger" onclick="deleteRashifalDate('${date._id}', '${date.dateLabel}')">Delete</button>
                </td>
            </tr>
        `).join('');
        updateSelectedRashifalCount();
    }

    function toggleSelectAllRashifalDates() {
        const selectAll = document.getElementById('selectAllRashifalDates');
        const checkboxes = document.querySelectorAll('.rashifal-date-checkbox');
        checkboxes.forEach(cb => cb.checked = selectAll.checked);
        updateSelectedRashifalCount();
    }

    function updateSelectedRashifalCount() {
        const checkboxes = document.querySelectorAll('.rashifal-date-checkbox:checked');
        const count = checkboxes.length;
        document.getElementById('selectedRashifalCount').textContent = count;
        document.getElementById('bulkDeleteRashifalBtn').style.display = count > 0 ? 'inline-block' : 'none';
        
        // Update select all checkbox state
        const allCheckboxes = document.querySelectorAll('.rashifal-date-checkbox');
        const selectAll = document.getElementById('selectAllRashifalDates');
        if (allCheckboxes.length > 0) {
            selectAll.checked = checkboxes.length === allCheckboxes.length;
        }
    }

    async function bulkDeleteRashifalDates() {
        const checkboxes = document.querySelectorAll('.rashifal-date-checkbox:checked');
        if (checkboxes.length === 0) {
            alert('Please select at least one date to delete');
            return;
        }

        const dateIds = Array.from(checkboxes).map(cb => cb.value);
        if (!confirm(`Delete ${dateIds.length} selected date(s)? This will also delete all their contents.`)) {
            return;
        }

        try {
            const res = await fetch('/api/rashifal/daily', {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ dateIds })
            });
            const data = await res.json();
            if (data.success) {
                alert(data.message);
                loadRashifalDailyDates();
            } else {
                alert('Error: ' + data.error);
            }
        } catch (error) {
            alert('Error deleting dates');
        }
    }

    function showAddRashifalDateModal() {
        document.getElementById('addRashifalDateForm').reset();
        const modal = new bootstrap.Modal(document.getElementById('addRashifalDateModal'));
        modal.show();
    }

    async function submitAddRashifalDate() {
        const form = document.getElementById('addRashifalDateForm');
        const formData = new FormData(form);
        const payload = {
            dateLabel: formData.get('dateLabel')
        };
        try {
            const res = await fetch('/api/rashifal/daily', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });
            const data = await res.json();
            if (data.success) {
                alert('Date created successfully!');
                const modal = bootstrap.Modal.getInstance(document.getElementById('addRashifalDateModal'));
                modal.hide();
                loadRashifalDailyDates();
            } else {
                alert('Error: ' + data.error);
            }
        } catch (error) {
            alert('Error creating date');
        }
    }
    
    async function uploadDailyRashifalDatesExcel(input) {
        if (!input.files.length) return;
        
        const formData = new FormData();
        formData.append('excelFile', input.files[0]);
        
        try {
            const res = await fetch('/rashifal/upload-daily-dates', {
                method: 'POST',
                body: formData
            });
            const data = await res.json();
            if (data.success) {
                alert(`Successfully created ${data.count} date(s)!`);
                loadRashifalDailyDates();
            } else {
                alert('Error: ' + data.error);
            }
        } catch (error) {
            alert('Error uploading Excel file');
        }
        
        // Clear file input
        input.value = '';
    }

    function editRashifalDate(id, dateLabel, dateISO, notes) {
        const form = document.getElementById('editRashifalDateForm');
        form.querySelector('[name="dateId"]').value = id;
        form.querySelector('[name="dateLabel"]').value = dateLabel;
        const modal = new bootstrap.Modal(document.getElementById('editRashifalDateModal'));
        modal.show();
    }

    async function submitEditRashifalDate() {
        const form = document.getElementById('editRashifalDateForm');
        const dateId = form.querySelector('[name="dateId"]').value;
        const payload = {
            dateLabel: form.querySelector('[name="dateLabel"]').value
        };
        try {
            const res = await fetch(`/api/rashifal/daily/${dateId}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });
            const data = await res.json();
            if (data.success) {
                alert('Date updated successfully!');
                const modal = bootstrap.Modal.getInstance(document.getElementById('editRashifalDateModal'));
                modal.hide();
                loadRashifalDailyDates();
            } else {
                alert('Error: ' + data.error);
            }
        } catch (error) {
            alert('Error updating date');
        }
    }

    async function deleteRashifalDate(id, dateLabel) {
        if (!confirm(`Delete date "${dateLabel}"? This will also delete all its contents.`)) return;
        try {
            const res = await fetch(`/api/rashifal/daily/${id}`, { method: 'DELETE' });
            const data = await res.json();
            if (data.success) {
                alert('Date deleted successfully!');
                loadRashifalDailyDates();
            } else {
                alert('Error: ' + data.error);
            }
        } catch (error) {
            alert('Error deleting date');
        }
    }

    async function viewRashifalDateContent(dateId, dateLabel) {
        currentViewingRashifalDateId = dateId;
        document.getElementById('viewRashifalDateLabel').textContent = dateLabel;
        try {
            const res = await fetch(`/api/rashifal/daily/${dateId}`);
            const data = await res.json();
            if (data.success) {
                const tbody = document.getElementById('rashifalDateContentTableBody');
                if (!data.data || data.data.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="7" class="text-center">No content uploaded yet</td></tr>';
                } else {
                    // Store content data for editing
                    window.rashifalContentData = data.data;
                    tbody.innerHTML = data.data.map((content, idx) => `
                        <tr>
                            <td>${content.id}</td>
                            <td>${content.title_hn || '-'}</td>
                            <td>${content.title_en || '-'}</td>
